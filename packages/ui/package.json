{
  "name": "@ios26/ui",
  "version": "0.1.0",
  "description": "iOS 26 design system components built with React, shadcn/ui, and Tailwind CSS",
  "author": "Nishant Koli",
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "styles"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run build:rename && npm run build:css",
    "build:ts": "tsc -p tsconfig.esm.json",
    "build:rename": "node scripts/rename-extensions.js",
    "build:css": "tailwindcss -i ./styles/globals.css -o ./dist/styles.css --minify",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ios26-react-shadcn.git",
    "directory": "packages/ui"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "ios26",
    "ios",
    "design-system",
    "shadcn",
    "tailwindcss"
  ]
}

